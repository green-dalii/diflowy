---
import { Image } from "astro:assets";
// import Facebook from "../../assets/facebook.svg";
// import Linkedin from "../../assets/linkedin.svg";
import Logo from "../../assets/logo-alt.svg";
// import Twitter from "../../assets/twitter.svg";
// import ShortForm from "../ui/ShortForm.astro";
import { Icon } from "astro-icon/components";

const logos = [
  { name: "twitter", link: "https://x.com/myGreenerDalii" },
  { name: "discord", link: "https://discord.gg/7RgtPfg98d" },
  { name: "github", link: "https://github.com/green-dalii/diflowy" },
];

const links = [
  { name: "Explore", href: "/explore" },
  { name: "Share", href: "/upload" },
  { name: "Blog", href: "/blog" },
  { name: "About", href: "/about" },
];
---

<section class="sm:px-5 pt-60">
  <div class="w-full max-w-[1280px] mx-auto">
    <div
      class="px-[15px] bg-gradient-to-b from-[#086AA9] via-[#58ACD6] to-[#CAE9F8] text-white py-12 lg:px-[60px] sm:rounded-t-[45px] md:shadow-[0_-15px_15px_-15px_rgba(0,0,0,0.1)]"
    >
      <div>
        <div
          class="flex flex-col lg:flex-row gap-7 items-center justify-between"
        >
          <picture>
            <a href="/">
              <Image
                src={Logo}
                class="h-10 sm:w-36"
                alt="Logo for Diflowy"
              />
            </a>
          </picture>
          <ul class="flex flex-col sm:flex-row gap-5">
            {
              links.map((link) => {
                return (
                  <li class="text-center text-base font-medium">
                    <a class="hover:underline" href={link.href}>
                      {link.name}
                    </a>
                  </li>
                );
              })
            }
          </ul>
          <ul class="flex gap-5">
            {
              logos.map((logo) => {
                return (
                  <li>
                    <a href={logo.link} target="_blank">
                      <picture>
                        <Icon name={logo.name} class="text-3xl" />
                      </picture>
                    </a>
                  </li>
                );
              })
            }
          </ul>
        </div>

        <div class="flex flex-col lg:flex-row gap-8 mt-12 mb-10">
          <div
            class="flex text-center lg:text-start flex-col w-full lg:w-[30%]"
          >
            <h4 class="mb-4 text-sm font-semibold">Contact us</h4>
            <div class="flex flex-col justify-between gap-2">
              <a href="https://github.com/green-dalii/diflowy/discussions" aria-label="Github Discussion" target="_blank" class="text-xs hover:link">
                Github Discussion
              </a>
              <span class="text-xs"> Email: diflowy@greenerai.top</span>
              <span class="text-xs">Design by <a href="https://greenerdalii.top" aria-label="Greener-Dalii Studio" target="_blank" class="text-xs hover:link">Greener-Dalii Studio</a></span>
            </div>
          </div>
          <div
            class="flex text-center lg:text-start flex-col w-full lg:w-[30%]"
          >
            <h4 class="mb-4 text-sm font-semibold">Dify Official</h4>
            <div class="flex flex-col justify-between gap-2">
              <a href="https://dify.ai/" aria-label="Dify.AI" target="_blank" class="text-xs hover:link">
                Dify.AI
              </a>
              <a href="https://cloud.dify.ai/" aria-label="Dify Cloud" target="_blank" class="text-xs hover:link">
                Dify Cloud
              </a>
              <a href="https://docs.dify.ai/" aria-label="Dify Docs" target="_blank" class="text-xs hover:link">
                Dify Docs
              </a>
              <a href="https://dify.ai/blog" aria-label="Dify Blog" target="_blank" class="text-xs hover:link">
                Dify Blog
              </a>
            </div>
          </div>
          <div
            class="flex text-center lg:text-start flex-col w-full lg:w-[30%]"
          >
            <h4 class="mb-4 text-sm font-semibold">Resources</h4>
            <div class="flex flex-col justify-between gap-2">
              <a href="https://dify101.com/" aria-label="Dify101" target="_blank" class="text-xs hover:link">
                Dify101
              </a>
              <a href="https://github.com/svcvit/Awesome-Dify-Workflow" aria-label="Awesome-Dify-Workflow" target="_blank" class="text-xs hover:link">
                Awesome-Dify-Workflow
              </a>
              <a href="https://difyshare.com/" aria-label="DifyShare" target="_blank" class="text-xs hover:link">
                DifyShare
              </a>
            </div>
          </div>
        </div>
      </div>

      <div class="h-[1px] bg-white mb-5"></div>
      <div
        class="flex flex-col lg:flex-row justify-center mt-4 text-sm text-center md:justify-between md:mt-0"
      >
        <span class="text-xs">Â© 2024 GreenerAI </span>
      </div>
    </div>
  </div>
</section>
