---
import { Image } from "astro:assets";
import Logo from "../../assets/logo-alt.svg";
import { Icon } from "astro-icon/components";
import { t } from "i18next";
import { localizePath } from "astro-i18next";

const logos = [
  { name: "twitter", link: "https://x.com/myGreenerDalii" },
  { name: "discord", link: "https://discord.gg/7RgtPfg98d" },
  { name: "github", link: "https://github.com/green-dalii/diflowy" },
];

const links = [
  { name: t("navbar.explore"), href: localizePath("/explore") },
  { name: t("navbar.share"), href: localizePath("/upload") },
  { name: t("navbar.blog"), href: localizePath("/blog") },
  { name: t("navbar.about"), href: localizePath("/about") },
];

const difyOffical = [
  { name: "Dify.AI", link: "https://dify.ai/" },
  { name: "Dify Cloud", link: "https://cloud.dify.ai/" },
  { name: "Dify Docs", link: "https://docs.dify.ai/" },
  { name: "Dify Blog", link: "https://dify.ai/blog" },
];

const resources = [
  { name: "Dify101", link: "https://dify101.com/" },
  {
    name: "Awesome-Dify-Workflow",
    link: "https://github.com/svcvit/Awesome-Dify-Workflow",
  },
];
---

<section class="sm:px-5 pt-60">
  <div class="w-full max-w-[1280px] mx-auto">
    <div
      class="px-[15px] bg-gradient-to-b from-[#086AA9] via-[#58ACD6] to-[#CAE9F8] text-white py-12 lg:px-[60px] sm:rounded-t-[45px] md:shadow-[0_-15px_15px_-15px_rgba(0,0,0,0.1)]"
    >
      <div>
        <div
          class="flex flex-col lg:flex-row gap-7 items-center justify-between"
        >
          <picture>
            <a href="/">
              <Image src={Logo} class="h-10 sm:w-36" alt="Logo for Diflowy" />
            </a>
          </picture>
          <ul class="flex flex-col sm:flex-row gap-5">
            {
              links.map((link) => {
                return (
                  <li class="text-center text-base font-medium">
                    <a class="hover:underline" href={link.href}>
                      {link.name}
                    </a>
                  </li>
                );
              })
            }
          </ul>
          <ul class="flex gap-5">
            {
              logos.map((logo) => {
                return (
                  <li>
                    <a href={logo.link} target="_blank">
                      <picture>
                        <Icon name={logo.name} class="text-3xl" />
                      </picture>
                    </a>
                  </li>
                );
              })
            }
          </ul>
        </div>

        <div class="flex flex-col lg:flex-row gap-8 mt-12 mb-10">
          <div class="flex text-center lg:text-start flex-col w-full lg:w-1/3">
            <h4 class="mb-4 text-sm font-semibold">{t("navbar.contactus")}</h4>
            <div class="flex flex-col justify-between gap-2">
              <div class="text-xs">
                <a
                  href="https://github.com/green-dalii/diflowy/discussions"
                  aria-label="Github Discussion"
                  target="_blank"
                  class="hover:link"
                >
                  Github Discussion
                </a>
              </div>
              <div class="text-xs">Email: diflowy@greenerai.top</div>
              <div class="text-xs">
                Design by <a
                  href="https://greenerdalii.top"
                  aria-label="Greener-Dalii Studio"
                  target="_blank"
                  class="hover:link">Greener-Dalii Studio</a
                >
              </div>
              <div class="text-xs">
                <a
                  href="/login/privacy"
                  aria-label="Privacy Policy"
                  target="_blank"
                  class="hover:link"
                >
                  {t("navbar.privacypolicy")}
                </a>
              </div>
            </div>
          </div>
          <div class="flex text-center lg:text-start flex-col w-full lg:w-1/3">
            <h4 class="mb-4 text-sm font-semibold">{t("navbar.difyofficial")}</h4>
            <div class="flex flex-col justify-between gap-2">
              {
                difyOffical.map((link) => {
                  return (
                    <div class="text-xs">
                      <a
                        href={link.link}
                        aria-label={link.name}
                        target="_blank"
                        class="hover:link"
                      >
                        {link.name}
                      </a>
                    </div>
                  );
                })
              }
            </div>
          </div>
          <div class="flex text-center lg:text-start flex-col w-full lg:w-1/3">
            <h4 class="mb-4 text-sm font-semibold">{t("navbar.resources")}</h4>
            <div class="flex flex-col justify-between gap-2">
              {
                resources.map((link) => {
                  return (
                    <div class="text-xs">
                      <a
                        href={link.link}
                        aria-label={link.name}
                        target="_blank"
                        class="hover:link"
                      >
                        {link.name}
                      </a>
                    </div>
                  );
                })
              }
            </div>
          </div>
        </div>
      </div>

      <div class="h-[1px] bg-white mb-5"></div>
      <div
        class="flex flex-col lg:flex-row justify-center mt-4 text-sm text-center md:justify-between md:mt-0"
      >
        <span class="text-xs">Â© 2024 GreenerAI </span>
      </div>
    </div>
  </div>
</section>
