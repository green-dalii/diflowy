---
import { Image } from "astro:assets";
import Facebook from "../../assets/facebook.svg";
import Linkedin from "../../assets/linkedin.svg";
import Logo from "../../assets/logo-alt.svg";
import Twitter from "../../assets/twitter.svg";
import ShortForm from "../ui/ShortForm.astro";

const logos = [
  { name: "Facebook", src: Facebook, link: "https://facebook.com" },
  { name: "Linkedin", src: Linkedin, link: "https://linkedin.com" },
  { name: "Twitter", src: Twitter, link: "https://twitter.com" },
];

const links = [
  { name: "Discover", href: "/discover" },
  { name: "Share", href: "/upload" },
  { name: "My Flows", href: "#cases" },
  { name: "Blog", href: "#Testimonials" },
  { name: "Contect", href: "#Home" },
];
---

<section class="sm:px-5 pt-60">
  <div class="w-full max-w-[1240px] mx-auto">
    <div
      class="px-[15px] bg-dark text-white py-[55px] lg:px-[60px] md:rounded-t-[45px] md:shadow-[0_-15px_15px_-15px_rgba(0,0,0,0.1)] md:hover:shadow-[0_-30px_40px_-15px_rgba(0,0,0,0.3)] transition-all duration-300 transform md:hover:scale-[1.02]"
    >
      <div>
        <div
          class="flex flex-col lg:flex-row gap-7 items-center justify-between"
        >
          <picture>
            <a href="#home">
              <Image src={Logo} class="w-36 sm:w-[200px]" alt="Logo for Diflowy" />
            </a>
          </picture>
          <ul class="flex flex-col sm:flex-row gap-5">
            {
              links.map((link) => {
                return (
                  <li class="text-center">
                    <a class="underline" href={link.href}>
                      {link.name}
                    </a>
                  </li>
                );
              })
            }
          </ul>
          <ul class="flex gap-5">
            {
              logos.map((logo) => {
                return (
                  <li>
                    <a href={logo.link} target="_blank">
                      <picture>
                        <Image src={logo.src} alt={logo.name} />
                      </picture>
                    </a>
                  </li>
                );
              })
            }
          </ul>
        </div>

        <div class="flex flex-col lg:flex-row mt-[66px] mb-[51px]">
          <div
            class="flex text-center lg:text-start flex-col w-full lg:w-[30%]"
          >
            <h3 class="mb-5">Contact us:</h3>
            <div class="flex flex-col justify-between gap-4">
              <span> Email: greenerdalii.studio@outlook.com </span>
            </div>
          </div>
        </div>
      </div>

      <div class="h-[1px] bg-white mb-5"></div>
      <div
        class="flex flex-col lg:flex-row justify-center mt-4 text-sm text-center md:justify-between md:mt-0"
      >
        <span
          >Â© 2024 GreenerAI
      </div>
    </div>
  </div>
</section>
