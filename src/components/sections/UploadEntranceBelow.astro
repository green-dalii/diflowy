---
import { Image } from "astro:assets";
import Card from "../ui/Card.astro";
import { t } from "i18next";
import { localizePath } from "astro-i18next";
import propImg from "../../assets/pics/upload.svg";
---

<div class="mt-16 sm:mt-32 mb-5">
  <Card>
    <div
      class="group bg-[#F3F3F3] dark:bg-[--darkbgoffset] rounded-3xl p-8 relative"
    >
      <div class="flex flex-col sm:flex-row">
        <div class="w-full sm:w-[40%] flex flex-col gap-[26px]">
          <h2>{t("explorepage.uploadtitle")}</h2>
          <p>
            {t("explorepage.uploadtext1")}
            <br />{t("explorepage.uploadtext2")}
          </p>
          <a href={localizePath("/upload")}
            ><button class="btn-primary w-full sm:w-auto"
              >{t("explorepage.uploadbtn")}</button
            ></a
          >
        </div>
        <picture
          class="hidden sm:flex absolute right-0 lg:right-0 top-0 h-[300px] items-center justify-center"
        >
          <Image
            src={propImg}
            alt="This is an illustration"
            class="hidden sm:flex lg:h-full lg:w-auto group-hover:scale-110 transition-all duration-300"
          />
        </picture>
      </div>
    </div>
  </Card>
</div>
