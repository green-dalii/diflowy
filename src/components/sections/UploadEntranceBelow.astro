---
import { Image } from "astro:assets";
import Card from "../ui/Card.astro";
import Section from "./Section.astro";
import SectionTitle from "../ui/SectionTitle.astro";
import propImg from "../../assets/pics/upload.svg";
---

<Section>
  <div class="mt-32 mb-5">
    <Card>
      <div
        class="group bg-[#F3F3F3] dark:bg-[--darkbgoffset] rounded-3xl p-8 relative"
      >
        <div class="flex flex-col sm:flex-row">
          <div class="w-full sm:w-[40%] flex flex-col gap-[26px]">
            <h2>Didn't find<br>what you want?</h2>
            <p>If you have some interesting workflows, feel free to upload and share them with everyone.</p>
            <a href="/upload"
              ><button class="btn-primary w-full sm:w-auto"
                >Upload and Share</button
              ></a
            >
          </div>
          <picture
            class="hidden sm:flex absolute right-0 lg:right-0 top-0 h-[350px] items-center justify-center"
          >
            <Image
              src={propImg}
              alt="This is an illustration"
              class="hidden sm:flex lg:h-full lg:w-auto group-hover:scale-110 transition-all duration-300"
            />
          </picture>
        </div>
      </div>
    </Card>
  </div>
</Section>
