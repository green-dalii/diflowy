---
import { Image } from "astro:assets";
import HeroIlust from "../../assets/pics/hero-pic.png";
import Section from "./Section.astro";
import ReactFlowComponent from "../flow/ReactFlowComponent";
---

<Section id="home">
  <div
    class="grid grid-cols-1 grid-template md:grid-cols-2 md:grid-rows-1 mt-[135px]"
  >
    <div class="flex flex-col w-full lg:w-[66.5%] pt-20">
      <h1>Discover, Share, Download Dify Workflows in Diflowy!</h1>
    </div>
    <div class="row-span-1 md:row-span-3">
      <!-- <Image src={HeroIlust} alt="Hero Ilustration" loading="eager" /> -->
      <ReactFlowComponent client:load/>
    </div>
    <div class="w-full lg:w-[66.5%]">
      <p class="my-[35px]">
        Diflowy means Dify + Flow. Your Dify FlowHub
      </p>
      <a href="/discover">
        <button class="btn-primary w-full md:w-auto">Discover Workflows</button>
      </a>
    </div>
  </div>
</Section>
<style>
  .grid-template {
    grid-template-rows: auto 1fr;
  }
</style>
