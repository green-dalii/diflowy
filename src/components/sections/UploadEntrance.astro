---
import { Image } from "astro:assets";
import Card from "../ui/Card.astro";
import Section from "./Section.astro";

import propImg from "../../assets/pics/upload.svg";
---

<Section>
  <Card>
    <div
      class="group flex bg-[#F3F3F3] dark:bg-[--darkbgoffset] rounded-3xl p-8 relative mt-[123px] mb-[163px]"
    >
      <div class="w-full md:w-[40%] flex flex-col gap-[26px]">
        <h2>Share Your WorkFlow to Everyone</h2>
        <p>
          One for all, and all for one.
        </p>
        <a href="/upload"><button class="btn-primary">Share Your Ideas</button></a>
      </div>
      <picture
        class="hidden md:flex absolute right-0 lg:right-0 top-0 h-[350px] items-center justify-center"
      >
        <Image
          src={propImg}
          alt="This is an illustration"
          class="hidden md:flex lg:h-full lg:w-auto group-hover:scale-110 transition-all duration-300"
        />
      </picture>
    </div>
  </Card>
</Section>
