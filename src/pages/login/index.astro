---
import MainLayout from "../../layouts/MainLayout.astro";
import { Icon } from "astro-icon/components";
import Section from "../../components/sections/Section.astro";
import SectionTitle from "../../components/ui/SectionTitle.astro";
import "../../styles/globals.css";

const description =
  "Once you login to Diflowy, you can not only explore existing workflows but also upload, manage, and host your owns. Whether public or private, Diflowy will help you handle all your workflows efficiently.";
---

<MainLayout title="Login | Diflowy" description="Explore, Share, Download Dify Workflows in Diflowy">
  <div class="mt-48">
    <Section>
      <SectionTitle sectionTitle="Login Diflowy" description={description} />
      <div class="flex flex-col items-center justify-center my-32">
        <div class="pb-4 w-full sm:w-72">
          <a href="/api/login/github">
            <button
              class="btn-primary w-full inline-flex justify-center items-center gap-2"
            >
              <Icon name="github" class="text-3xl" />
              <span class="text-sm">Login with GitHub</span>
            </button>
          </a>
        </div>
        <div class="pb-4 w-full sm:w-72">
          <a href="/login" class="cursor-not-allowed">
            <button
              class="btn-disabled w-full inline-flex justify-center items-center gap-2 !bg-gray-300 !hover:bg-gray-300 !animate-none" disabled
            >
              <Icon name="google" class="text-3xl" />
              <span class="text-sm">Login with Google [Comming soon...]</span>
            </button>
          </a>
        </div>
        <div class="w-full sm:w-1/3">
          <div class="divider my-10 text-sm">OR</div>
        </div>
        <div class="w-full sm:w-72">
          <form id="login-form" class="flex flex-col gap-4">
            <div class="flex flex-col gap-2">
              <label for="email" class="text-sm font-medium">Email</label>
              <input
                type="email"
                id="email"
                class="input input-bordered w-full"
                placeholder="Comming soon..."
                disabled
              />
            </div>
            <div class="flex flex-col gap-2">
              <label for="password" class="text-sm font-medium"
                >Password</label
              >
              <input
                type="password"
                id="password"
                class="input input-bordered w-full"
                placeholder="Comming soon..."
                disabled
              />
            </div>
            <button
              type="submit"
              class="btn-disabled w-full md:w-auto flex items-center gap-2 text-sm justify-center" disabled>
              <Icon name="login" class="text-3xl" /><span>Login / Register with Email [Comming soon...]</span>
            </button> 
          </form>
          <div class="mt-8">
            <p class="text-xs text-gray-400">We follow the principle of <span class="italic">Minimal Necessity</span>, storing only the limited information required for user identity verification.</p>
            <p class="text-xs text-gray-400">For more details, see the <a class="link font-semibold" href="/login/privacy">Privacy Policy</a></p>
          </div>
        </div>
      </div>
    </Section>
  </div>
</MainLayout>
